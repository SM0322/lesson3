<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">

<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= render 'users/user', user: current_user %>
<%= render 'new', book: @book %>
</div>

      <div class="col-md-8 offset-md-1">

<h1>Books</h1>

<table class="table">
  <tr>
   <th></th>
   <th>Title</th>
   <th>Opinion</th>
  </tr>

<% @books.each do |book| %>
  <tr>
   <th>

     <span>
        <%= link_to user_path(book.user.id),class: 'nav-link text-blue' do %>
        <%= image_tag book.user.get_profile_image(100,100) %>
        <% end %>
     </span>
     
   </th>
   <th>
     <span>
      <p><%= link_to book.title, book_path(book.id) %></p>
     </span>
   </th>

   <th>
     <span>
      <p> <%= book.body %></p>
     </span>
   </th>
   
   <th>
       <p>コメント件数：<%= book.book_comments.count %></p>
   </th>
   
   <th id="favorite_buttons_<%= book.id %>">
       <%= render "favorit1es/favorit1es", book: book %>
       
   </th>
      <% end %>
  </tr>
</table>
    </div>
  </div>

</div>