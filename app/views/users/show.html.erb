<div class="container px-5 px-sm-0">

  <div class="row">
    <div class="col-md-3">
      <%= render 'user2', user: @user %>
      <%= render 'books/new', book: @book %>
    </div>


      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>

<table class="table">
  <tr>
    <th></th>
   <th>Title</th>
   <th>Opinion</th>
  </tr>

  <% @books.each do |book| %>
  <tr>
   <th>
     <span>
      <p><%= image_tag book.user.get_profile_image(100,100) %></p>
     </span>
   </th>
   <th>
     <span>
      <p><%= link_to book.title, book_path(book.id) %></p>
     </span>
   </th>

   <th>
     <span>
      <p><%= book.body %></p>
     </span>
   </th>
  </tr>
  <% end %>
</table>
    </div>
  </div>

</div>