<% if @user.errors.any? %>
  <%= @user.errors.count %>件のエラーが発生しました
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="containar">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-1 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
<%= form_with model: @user do |f| %>
  <div class="form-group">
  <label for="inputName">Name</label>
  <p><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name"%></p>
  </div>

  <div class="form-group">
  <label for="inputImage">Image</label>
  <p><%= f.file_field :profile_image, placeholder: "Image", accept: "image/*" %></p>
  </div>

  <div class="form-group">
  <label for="inputIntroduction">Introduction</label>
  <p><%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"Introduction" %></p>
  </div>

  <div class="form-group">
      <%= f.submit "Update User",class: 'btn btn-secondary' do%>
      <% end %>
  </div>
<% end %>


    </div>
  </div>
</div>

